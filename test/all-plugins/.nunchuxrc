# Test config with new [type:name] format

[settings]
icon_running = â—
icon_stopped = â—‹
menu_width = 60%
menu_height = 50%
popup_width = 90%
popup_height = 90%
cache_ttl = 60

# Apps
[app:lazygit]
cmd = lazygit
desc = Git TUI
status = n=$(git status -s 2>/dev/null | wc -l | tr -d ' '); [[ $n -gt 0 ]] && echo "($n changed)"

[app:htop]
cmd = htop
desc = Process viewer

# Submenu
[menu:system]
desc = System tools
status = echo "load: $(cut -d' ' -f1 /proc/loadavg)"

[app:system/btop]
cmd = btop
desc = Task manager

[app:system/ncdu]
cmd = ncdu
desc = Disk usage analyzer

# Directory browser
[dirbrowser:config]
directory = ~/.config
depth = 2
sort = modified-folder
cache_ttl = 300

